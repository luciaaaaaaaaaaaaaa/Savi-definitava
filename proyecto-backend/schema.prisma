// Este archivo define el esquema de la base de datos para Prisma
// Tablas en inglés para coincidir con la base de datos existente
// Ejecuta: npx prisma migrate dev --name init para crear la base de datos


generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  publicado Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("User")
}

model Company {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  publicado     Boolean  @default(false)
  accessibility String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relación con accesibilidad
  accessibilityDetails Accessibility[]
  
  @@map("Company")
}

model Accessibility {
  id         Int     @id @default(autoincrement())
  company_id Int
  
  // Accesibilidad física
  hallways_min_90cm       Boolean @default(false)
  ramp                    Boolean @default(false)
  door_80cm               Boolean @default(false)
  non_slip_floors         Boolean @default(false)
  accessible_bathroom     Boolean @default(false)
  adapted_tables_chairs   Boolean @default(false)
  elevator                Boolean @default(false)
  
  // Adaptabilidad accesible
  braille_signage         Boolean @default(false)
  color_contrast          Boolean @default(false)
  podotactile_guides      Boolean @default(false)
  emergency_alarms        Boolean @default(false)
  hearing_aid_system      Boolean @default(false)
  
  // Campos adicionales para detalles específicos
  adapted_bathroom_quantity    String?
  adapted_bathroom_details     String?
  priority_attention_type      String?
  priority_attention_schedule  String?
  other_services               String?
  
  // Relación con empresa
  company Company @relation(fields: [company_id], references: [id])
  
  @@map("Accessibility")
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  
  @@map("Contact")
}

